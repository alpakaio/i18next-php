{
    "name": "pkly/i18next-php",
    "description": "A port of the i18next JS library for PHP",
    "keywords": [
        "i18n",
        "translation"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Pawel Kakol [Ly]",
            "email": "kakolp95@gmail.com"
        }
    ],
    "type": "project",
    "require": {
		"php": ">=7.3",
        "ext-mbstring": "*",
        "ext-json": "*",
        "psr/log": "^1.1"
    },
    "require-dev": {
		"phpunit/phpunit": "6.*",
        "monolog/monolog": "^2.0"
    },
    "suggest": {
        "monolog/monolog": "An excellent logging solution, integrates seamlessly"
    },
    "autoload": {
        "psr-4": {
            "Pkly\\I18Next\\": "src/I18Next"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pkly\\I18Next\\Tests\\": "tests"
        }
    }
}
